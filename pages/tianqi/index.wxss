.canvas {
    width: 600px;
    height: 200px;
    background-color: rgba(259, 250, 250, .1);
    border-radius: 6px;
    display: inline-block;
}

.holder {
    padding: 40px;
    text-align: center;
    background-color: #4d8cfc;
}
.time {
    padding-top: 6px; 
    display: inline-block;
    width: 600px;
}
.time-item {
    width: 16.6666%;
    display: inline-block;
    color: #FFFFFF;
}
.icon {
    padding-bottom: 10px; 
    display: inline-block;
    width: 600px;
}
.icon-img {
    width: 30px;
    height: 30px;
}